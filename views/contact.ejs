    <main id="contact">
        <h1 class="lg-heading">
            Contact <span class="text-secondary">Me</span>
        </h1>
        <h2 class="sm-heading">
            Get in touch!
        </h2>
        

        <div class="contact-form">
            <div>
              <div class="info">
                <h3>Andrew Beban</h3>
                <ul>
                  <a href="tel:+642102480362"><li><i class="fa fa-phone"></i> 027 8141 659</li></a>
                  <a href="mailto: apbeban@gmail.com"><li><i class="fa fa-envelope"></i> apbeban@gmail.com</li></a>
                  <li><i class="fa fa-road"></i> 15 Glenburn Place, Hamilton, NZ</li>
                </ul>
              </div>
              <% if(msg.length > 0) { %>
                <div class="alert alert-success">
                   <%= msg %>
                </div>
                <% } %>
              <div class="contact">
                
                <form class="form-inline" method="POST" action="contact">
                  <p>
                    <label>Name
                      <span class="text-danger">*</span>
                    </label>
                    <input type="text" name="name" required>
                  </p>
                  <p>
                    <label>Email Address
                      <span class="text-danger">*</span>
                    </label>
                    <input type="email" name="email" required>
                  </p>
                  <p>
                    <label>Subject
                      <span class="text-danger">*</span>
                    </label>
                    <input type="text" name="subject" required>
                  </p>
                  <p>
                    <label>Phone Number
                    </label>
                    <input type="text" name="phone">
                  </p>
                  <p class="full">
                    <label>Message
                      <span class="text-danger">*</span>
                    </label>
                    <textarea name="message" rows="5" required></textarea>
                  </p>
                  <p class="full">
                    <button type="submit">Submit</button>
                  </p>
                </form>
              </div>
            </div>
          </div>

    </main>

